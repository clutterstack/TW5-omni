/* ----------------------------------------- */
/* Above and below item droppable zones */
/* ----------------------------------------- */

.tree .can-omni-peripheral, .exp .can-omni-peripheral, .tree .can-omni-topadd, .exp .can-omni-bottomadd.exp .can-omni-topadd, .exp .can-omni-bottomadd { 
    grid-column: 3/6; 
    border-radius: 4px; 
    display: flex; 
    flex-direction: row; 
    justify-content: space-between; 
    line-height: 16pt; 
    background-color: #ffffff;}

.tree .can-omni-bottomadd, .exp .can-omni-bottomadd {
    margin-left: 2em;
}

/* ----------------------------------------- */
/* Depending on view mode */
/* ----------------------------------------- */

.todo > .can-omni-text {display: flex; flex-direction: row;}

.todo > .can-omni-foldbutton {display: none;}

