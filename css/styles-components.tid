/* Style the quickadd for in an omnibus   */
/* ---------------------------------------*/

.can-quickadd.sub {margin-top: 0;}

/* ---------------------------------------*/
/* Vertical item handle                   */
/* ---------------------------------------*/

.can-omni-itemhandle {width: 1.6em; height: 100%; grid-column: 3/4; 
    grid-row: span 4;}

.can-omni-itemhandle .tc-draggable { height: 100%;}


.tree .can-omni-itemhandle {border-radius: 5px 0 0 5px; width: 1em; height: 100%; grid-column: 3/4; grid-row: span 1;background-color: <<colour page-background>>;
    margin:0; padding:2px;}

.tree .can-omni-itemhandle:hover {
    background-color: <<colour muted-foreground>>;
}

.tree .can-omni-itemhandle .can-omni-link svg {fill: <<colour muted-foreground>>;}
.tree .can-omni-itemhandle .can-omni-link:hover svg {fill: <<colour background>>;}

.tree .can-omni-itemhandle-inner {
    border-radius: 5px 0 0 5px; 
    box-sizing: border-box;
    height: 100%; 
    width: 100%;
    background-color: <<colour page-background>>;
    margin:0;
    }

.can-omni-itemhandle-inner { 
    box-sizing: content-box; 
    border-radius: 2px;
    height: 100%; 
    width: 1px;
    background-color: #cccccc;
    margin-left: 0.4em;
    }

.can-omni-itemhandle:hover .can-omni-itemhandle-inner { 
    background-color: #999999;
    }

/* ---------------------------------------*/
/* Teaser                                 */
/* ---------------------------------------*/

.omni-teaser {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-content: center;
}

.omni-teaser-body {
    position: relative;
    height: 2em;
    overflow: hidden;
    display: flex;
    flex-direction: column;
}

.omni-teaser-body::after {
    background-image: linear-gradient( top, 
            rgba( 255, 255, 255, 0 ) 0%,
            rgba( 255, 255, 255, 0 ) 40%,
            rgba( 255, 255, 255, 1 ) 60%,
            rgba( 255, 255, 255, 1 ) 100% );
        background-image: -moz-linear-gradient( top, 
            rgba( 255, 255, 255, 0 ) 0%,
            rgba( 255, 255, 255, 0 ) 40%, 
            rgba( 255, 255, 255, 1 ) 60%,
            rgba( 255, 255, 255, 1 ) 100% );
        background-image: -ms-linear-gradient( top, 
            rgba( 255, 255, 255, 0 ) 0%, 
            rgba( 255, 255, 255, 0 ) 40%,
            rgba( 255, 255, 255, 1 ) 60%,
            rgba( 255, 255, 255, 1 ) 100% );
        background-image: -o-linear-gradient( top, 
            rgba( 255, 255, 255, 0 ) 0%, 
            rgba( 255, 255, 255, 0 ) 40%,
            rgba( 255, 255, 255, 1 ) 60%,
            rgba( 255, 255, 255, 1 ) 100% );
        background-image: -webkit-linear-gradient( top, 
            rgba( 255, 255, 255, 0 ) 0%,
            rgba( 255, 255, 255, 0 ) 40%, 
            rgba( 255, 255, 255, 1 ) 100% );
    content: " ";
    height: 100%;
    width: 100%;
    position: absolute;
}

.can-omni-text .omni-teaser-indicator {
margin-top: -1rem;
}

.can-omni-text .omni-teaser-indicator p {
    font-size: 1.2rem;
    font-weight: bold;
    margin-bottom: 0;
    margin-left: auto;
    margin-right: auto;
}


.can-omni-text { grid-column: 4/5; display: flex; flex-direction: row; z-index: 10;}

.can-omni-text[hidden] {display: none;}

.can-omni-text .tc-reveal, .can-omni-todo-text {width: 100%; }

.can-omni-text p, .can-omni-text li, .can-omni-text pre { 
  /* margin-top: 0;  
    margin-bottom: 0.8em; */
    max-width: 46em;
}

.can-omni-text td {
     /*width: 100%;*/
