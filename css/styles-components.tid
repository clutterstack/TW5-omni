/* .can-omni-text p:last-child { margin-bottom: 0.6em; } */

.omni-showomni {grid-column:4/6; }

/* Space to the left of subomnis */

.can-omni-stream.slim, .can-omni-stream.edit, .can-omni-stream.post, .can-omni-stream.named {
    margin-left: -1.2em;
}

.can-omni-stream .can-omni-stream.edit, .can-omni-stream .can-omni-stream.slim, .can-omni-stream .can-omni-stream.todo, .can-omni-stream .can-omni-stream.read,  .can-omni-stream .can-omni-stream.namedro {
    margin-left: 1em;
}


/* =======================*/
/* Buttons, control rows  */
/* =======================*/

.can-omni-ctlrow {
    grid-column: 4/6; 
    display: flex; 
    flex-direction:row; 
    flex-wrap: wrap; 
    justify-content: space-between;
    padding-top: 0.1em; 
    margin-right: 2em;}

.can-omni-ctl  { 
    grid-column: 5/6; 
    display: flex; 
    flex-direction: row; 
    justify-content: flex-end; 
    align-content: flex-start; 
    padding-top: 0.4em; 
    padding-left: 0.4em;
    }

.can-omni-subctl {
    display: flex; 
    flex-direction: row; 
    flex-wrap: wrap; 
    align-content: flex-start;
    }

.tc-draggable.can-omni-ctlrow:hover svg {
    background: #000000;
}

.slim .can-omni-subctl, .tree .can-omni-subctl {
    grid-column: 5/6;
    padding-left: 0.2em;
}


.can-omni-foldbutton {
    grid-column: 3/4; 
    align-self: start; 
    height: 1.5em; 
    z-index: 9999; 
    display: flex; 
    flex-direction: column; 
    justify-content: flex-start;
    margin-top: 0.4em;
    }

.tree .can-omni-foldbutton {
    grid-column: 3/4;
}

.can-omni-stream.bar .can-omni-foldbutton {
    margin-left: -0.4em;
    margin-right: 0.4em;
}
.can-omni-foldbutton:hover svg {fill: #666666;}

