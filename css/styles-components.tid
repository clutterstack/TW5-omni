/* ----------------------------------------- */
/* Above and below item droppable zones */
/* ----------------------------------------- */

.can-omni-peripheral, .can-omni-topadd, .can-omni-bottomadd { grid-column: 2/6; border-radius: 4px; display: flex; flex-direction: row; justify-content: space-between; line-height: 16pt; background-color: #ffffff;}

.tree .can-omni-peripheral, .tree .can-omni-topadd, .tree .can-omni-bottomadd { 
    grid-column: 3/6; 
    border-radius: 4px; 
    display: flex; 
    flex-direction: row; 
    justify-content: space-between; 
    line-height: 16pt; 
    background-color: #ffffff;}

.tree .can-omni-bottomadd {
    margin-left: 2em;
}

.can-omni-peripheral.tc-droppable, .can-omni-topadd.tc-droppable, .can-omni-bottomadd.tc-droppable { width: 100%; display: flex; flex-direction: row;}

.can-omni-button.can-omni-toggleadd {
    width: 100%;
    display: flex; 
    flex-direction: row;
    justify-content: flex-start; 
    padding-left: 0.4em;
    margin: 2px 0;
}

.can-omni-toggleadd:hover {background-color: #efefef;}

.can-omni-peripheral.tc-dragover, .can-omni-topadd.tc-dragover, .can-omni-bottomadd.tc-dragover, .tc-dragover .can-omnibus-droppable { border-radius: 5px;background-color: #0ff; }

.can-omni-peripheral .can-omni-button, .can-omni-bottomadd .can-omni-button {border-radius: 4px; width: 100%;}

.can-quickadd.sub, .can-omni-top { grid-column: 2/6; margin-bottom: 0.8em; }

/* ----------------------------------------- */
/* Depending on view mode */
/* ----------------------------------------- */

.todo > .can-omni-text {display: flex; flex-direction: row;}

.todo > .can-omni-foldbutton {display: none;}

/*.read > .can-omni-text {margin-left: 0.3em; margin-bottom: 0.5em;}*/

.zone .can-omni-itemhandle, .zone .can-omni-text {margin-bottom: 0.8em;}

.can-omni-stream.todo {grid-template-columns: auto auto 7fr auto; } 

/* ------------------------------------------------------------------------ */
/* Styling according to level in data tiddler (could do by layout mode too) */
/* ------------------------------------------------------------------------ */

