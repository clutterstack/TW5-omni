/* -------------------------- */
/* Omnibus export sidebar tab */
/* -------------------------- */

 .omni-bundle {
     display: flex;
     flex-direction: row;
 }

/* --------------------------------- */
/* General in-tiddler omnibus styles */
/* --------------------------------- */

.can-omni-toptools {
margin: 0 0 0.4em 0;
display: flex;
flex-direction: row;
justify-content: space-between;
grid-column: 1/6;
}

.omni-stream-container {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.can-omni-stream { 
display: grid; 
grid-template-columns: max-content max-content auto 7fr max-content; /* 1em auto 7fr auto;  */
grid-template-rows: auto; 
/*border: 1px solid cyan;*/
/* width: 100%; */
}

.can-omni-stream.bar {
    border-left: 1px solid <<colour muted-foreground>>;
    margin-left: -0.4em;
    padding-left: 0.6em;
}


.can-omni-stream > div.tc-draggable { cursor: pointer; }

.can-omni-stream.tree {
    margin-left: 1em;
    grid-template-columns: max-content max-content max-content auto 7fr max-content; /* 1em auto 7fr auto;  */
    
}

.tree .omni-branch {
    grid-column: 1/6;
    grid-row: span 2;
    border-left: 1px solid;
    border-bottom: 1px solid;
    border-radius: 0 0 0 1px;
    margin-left: 0em;
    display: grid;
    grid-template-columns: max-content max-content auto 7fr max-content; /* 1em auto 7fr auto;  */
    grid-template-rows: auto;
}

.tree .omni-item-container {
    grid-column: 1/6;
    display: grid;
    grid-template-columns: max-content max-content auto 7fr max-content; /* 1em auto 7fr auto;  */
    grid-template-rows: auto;
    border-left: 1px solid;
    box-sizing: content-box;
}

.tree .omni-item-container.toplevel {
    border: none;
}

.tree .omni-item-container:last-of-type {
    border-left: 1px solid rgba(0,0,0,0);
}

.tree .omni-branch-edge {
    grid-column: 1/2;
    grid-row: span 2;
    width: 0
    box-sizing: border-box;
    min-height: 1em;
    margin-bottom: -1em;
}
.tree .omni-branch-line {
    grid-column:2/3;
    grid-row: span 1;
    width:1em;
    border-left: 1px solid;
    border-bottom: 1px solid;
    border-radius: 0 0 0 10px;
    box-sizing: border-box;
    margin-bottom: -1em;
    margin-left: -1px;
}

.tree .can-omni-text {
    border-radius: 0 5px 5px 0;
    background-color: <<colour page-background>>;
    grid-column: 4/5;
    padding: 0.2em;
    border: none;
}

.tree .omni-showomni.tc-reveal {
}

div.omni-text-dblclick {width:100%;}
.omni-text-display {height: 100%;}

.omni-text-display > :nth-child(1) {
    margin-top: 0;
}
.omni-text-display > :last-child {
    margin-bottom: 0;
}

.tc-can-keyboard {
    width: 100%;
}

/* ------------------ */
/* headings           */
/* ------------------ */


.can-omni-stream h1 {font-size: 1.5rem;}

 .can-omni-stream h2 {
     font-size: 1.3rem;
     margin-bottom: 1em;
     margin-top:1em;
 }
 
 .can-omni-stream h3 {
     font-size: 1.2rem;
     margin-bottom: 1em;
     margin-top:1em;
 }

.can-omni-stream h4 {font-size: 1.1rem; font-weight:500;}
.can-omni-stream h5 {font-size: 1.0rem; font-weight:500;}
.can-omni-stream h6 {font-size: 1.0rem;}

.can-omni-stream .omni-title-heading {
    grid-column: 3/5;
    flex: 1;
    font-size: 1.4rem;
    font-weight: 400;
    margin-right: 0.4em;
}

.can-omni-stream .omni-title-heading.view {
    margin: 0.2em 0.4em 0.4em 0;
}

.can-omni-stream .omni-title-heading .can-quickadd-textarea { 
    margin: 0 0.4em 0 0; 
    border: 1px solid #ccc; 
    }

/* ----------------------------------------- */
/* code                                      */
/* ----------------------------------------- */

.can-omni-stream pre {
    /* max-width: calc({{$:/themes/tiddlywiki/vanilla/metrics/storywidth}} - 25%); */
