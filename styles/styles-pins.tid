<style>
/****** START styles-pins ********/

.can-omni-toptools { /* note this will have an impact on other omnis open in other modes */
    z-index: 100;
    position: relative;
}

.can-omni-stream.pins {
    position: relative;
    z-index: 100;
    font-size: 16px;
    overflow-x: scroll;
    overflow-y: hidden;  
}


.pins .omni-svg-container {
    
}

.pins .omni-item-container {
    /* grid-column: 2/4; */
    z-index: 100;
    display: grid;
    grid-template-areas: "peri peri peri peri"
                       "handle text menu margin";
    grid-template-columns: min-content minmax(100px, 800px) min-content max-content; /* 1em auto 7fr auto;  */
    grid-template-rows: auto;
    position: relative;
    /*padding-right: 1em;*/
   /* margin-right: -1em; */
    
}

.pins .omni-item-container.toplevel { grid-column: 1/2;}
.pins .depth-0 { grid-column: 1/2;}
.pins .depth-1 { grid-column: 2/3;}
.pins .depth-2 { grid-column: 3/4;}
.pins .depth-3 { grid-column: 4/5;}
.pins .depth-4 { grid-column: 5/6;}
.pins .depth-5 { grid-column: 6/7;}
.pins .depth-6 { grid-column: 7/8;}
.pins .depth-7 { grid-column: 8/9;}
.pins .depth-8 { grid-column: 9/10;}
.pins .depth-9 { grid-column: 10/11;}
.pins .depth-10 { grid-column: 11/12;}
.pins .depth-11 { grid-column: 12/13;}
.pins .depth-12 { grid-column: 13/14;}
.pins .depth-13 { grid-column: 14/15;}
.pins .depth-14 { grid-column: 15/16;}
.pins .depth-15 { grid-column: 16/17;}
.pins .depth-16 { grid-column: 17/18;}


.pins .omni-collapsebutton, .pins .omni-add-child {
    grid-area: margin;
    width: 1.6em;
    margin-right: -1.6em;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: flex-start;
    padding-left: 0.1em;
    padding-top: 1em;
}

.pins .omni-heading-row {
    padding-top: 0.4em;
    display: flex;
    flex-direction: row;
}

.pins .omni-text-display {
    grid-area:text;
    /* max-width: 55em; */
   /* border-radius: 0 5px 5px 0;*/
    border: none;
    background-color: <<colour tiddler-editor-fields-even>>;
    display: flex;
    flex-direction: column;
 }  

.pins .omni-heading {
    display: flex;
    flex-direction: row;
}

.pins .omni-caption:hover {
background: #EEF8FF;
}

.pins .can-omni-title {
    padding-left: 0.4em;
}

.pins .omni-title-heading:hover { background: cyan;}

.pins .omni-title-heading button {margin-left: 1em;}

.pins .omni-title-heading {
    /* flex: 1 0 5em;*/ /* grow shrink basis */
    min-width: 30%;
    min-height: 1em;
    padding: 0 0.2em;
    border: none;
    font-size: 1.2em;
}

.pins .tc-tiddler-body {
    min-height:0.4em;
    /*padding-right: 1em;*/
    padding-top: 0em;
    margin-top: 0;
    width: 100%;
}

/* ---------------------------------------*/
/* Vertical item handle                   */
/* ---------------------------------------*/

.pins .can-omni-itemhandle {
    /*position: relative;*/
    border-radius: 5px 0 0 5px; 
    width: 1.2em; 
    height: 100%; 
    grid-area: handle; 
    grid-row: span 1;
    background-color: <<colour tiddler-editor-fields-even>>;
    margin:0;
    display: flex;
    flex-direction: column;
    }

.pins .omni-item-container.currentNode > .can-omni-itemhandle {
    background-color: #10099;
}

.pins .can-omni-edithandle {
    height:100%;
    width:100%;
}

.pins .omni-button.can-omni-itemhandle:hover, .pins .can-omni-title:hover {
    background-color: <<colour muted-foreground>>;
}

.pins .can-omni-itemhandle .can-omni-link {height: 1em;}

.pins .can-omni-itemhandle .can-omni-link svg {fill: <<colour foreground>>;}
.pins .can-omni-itemhandle .can-omni-link:hover svg {fill: <<colour background>>;}

.pins .can-omni-itemhandle-inner {
    border-radius: 5px 0 0 5px; 
    /* box-sizing: border-box; */
    height: 100%; 
    width: 100%;
    margin:0;
    }


.pins .can-omni-ctlrow {
    margin-right: 0;
    line-height: 14px;
}

.pins .omni-subctl {
    grid-area: menu;
    display:flex;
    flex-direction: column;
    background-color: <<colour tiddler-editor-fields-even>>;
    border-radius: 0 5px 5px 0;
    gap: 0.8em;
    padding-top: 0.1em;
    padding-right: 0.1em;
}

.pins .omni-subctl .omni-button svg, .pins .can-omni-ctlrow .omni-button svg {
    fill: <<colour muted-foreground>>;
}
.pins .can-omni-ctlrow svg, .pins .omni-subctl svg { }

.pins .can-omni-foldbutton, .pins .can-omni-menubutton {
    font-size: 1.2em;
}

.pins .can-omni-peripheral.inert {
    height: 10pt;
}



.pins .omni-button {
    color: <<colour foreground>>;
    display: flex;
    justify-content: flex-end;
}

.pins .omni-button svg, .pins .can-omni-foldbutton svg, .pins .can-omni-menubutton svg { 
    fill:<<colour foreground>>;
    width: 0.6em;
    height: 0.6em;}





.pins .can-omni-stream .omni-button svg {
    width: 8pt;
    height: 8pt;
}

/* ----------------------------------------- */
/* Above and below item droppable zones */
/* ----------------------------------------- */

.pins .can-omni-peripheral, .can-omni-topadd, .can-omni-bottomadd { 
    z-index: 100;
    border-radius: 4px; 
    display: flex; 
    flex-direction: row; 
    justify-content: space-between; 
    line-height: 16pt;}

.pins .can-omni-peripheral { 
    grid-area: peri; 
}

/* ------------------ */
/* headings           */
/* ------------------ */

.pins.can-omni-stream h1 {
    font-size: 1.75em;
    font-weight: 600;
    margin-bottom: 0.5em;
    }

.pins.can-omni-stream h2 {
    font-size: 1.5em;
    font-weight: 600;
    margin-bottom: 0.5em;
    margin-top:0.4em;
 }
 
.pins.can-omni-stream h3 {
    font-size: 1.3em;
    font-weight: 600;
    margin-bottom: 0.5em;
    margin-top:0.4em;
 }

.pins.can-omni-stream h4 {
    font-size: 1.2em; 
    font-weight:600;
    margin-bottom: 0.5em;
    margin-top:0.4em;}

.pins.can-omni-stream h5 {font-size: 1.1em; font-weight:600;}
.pins.can-omni-stream h6 {font-size: 1.0em; font-weight: 600;}


/* --------------- */
/* media-dependent */
/* --------------- */




/****** END styles-pins ********/

</style>
