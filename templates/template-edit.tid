tags: $:/tags/Macro

\define everyedit(depth)
	<<can-omni-peripheral>>
	<<can-omni-itemhandle>>
	<<can-omni-folder>>
	<div class="can-omni-ctlrow">			
		<div>
			<<can-omni-title-link>>
		</div>
		<div class="can-omni-subctl">
			<<can-omni-delist>>
			<<can-omni-delete>>
			<<can-omni-make-omnibus>>
		</div>
	</div>
    <<can-omni-text-region>>
	<<can-omni-taglist>>
